#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../@kadira/storybook-deployer/bin/storybook_to_ghpages" "$@"
  ret=$?
else 
  node  "$basedir/../@kadira/storybook-deployer/bin/storybook_to_ghpages" "$@"
  ret=$?
fi
exit $ret
